<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen>
    <EditTextPreference 
        title="Логин" 
        positiveButtonText="ОК" 
        summary="|Введите логин в Альфа.Click|{@s}" 
        dialogTitle="Логин" 
        negativeButtonText="Отмена" 
        dialogMessage="Введите логин для входа в систему Альфа.Click."
        key="login">
    </EditTextPreference>
    <EditTextPreference 
        positiveButtonText="ОК"
        key="password" 
        dialogTitle="Пароль"
        negativeButtonText="Отмена"
        title="Пароль"
        summary="|Введите пароль в Альфа.Click|***********"
        dialogMessage="Введите пароль, используемый для входа в систему Альфа.Click."
        inputType="textPassword">
    </EditTextPreference>
    <ListPreference 
        key="type" 
        title="Что смотреть"
        summary="||{@s}\n"
        entries="Карта|Кредитный счет"
        entryValues="card|credit"
	defaultValue="card">
    </ListPreference>
    <EditTextPreference 
        positiveButtonText="ОК"
        key="cardnum" 
        dialogTitle="Номер карты/счета"
        negativeButtonText="Отмена"
        title="Номер карты/счета"
        summary="Последние 4 цифры карты или счета|Автоматически\n|{@s}\n"
        dialogMessage="Введите последние 4 цифры карты или кредитного счета, по которому вы хотите получить информацию. Если это поле оставить пустым, то будет показана информация по первой карте/счету."
        inputType="number">
    </EditTextPreference>
<!-- Мобильный, кажется, умер.    
    <CheckBoxPreference
        title="Мобильный Альфа.Клик"
        defaultValue="false"
        summaryOn="Вход через мобильный Альфа.Клик (если он разрешен в основном Альфа.Клик)"
        summaryOff="Вход через основной Альфа.Клик"
        key="usemobile" /> -->
</PreferenceScreen>