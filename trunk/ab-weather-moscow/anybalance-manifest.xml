<?xml version="1.0" encoding="utf-8"?>
<provider>
    <id major_version="3.0" version="12">ab-weather-moscow</id>
	<api flags="no_browser"/>
    <name>Температура в Москве</name>
    <description html="true"><![CDATA[
	<p>Текущая температура в Москве с https://gradus.melda.ru/</p>
	]]></description>
    <instruction html="true"><![CDATA[
	<p>Подробная инструкция по настройке: https://melda.ru/gradus/android/</p>
	]]></instruction>
    <author>Erelen Laiquendi &lt;erelen@melda.ru&gt;</author>
    <files>
        <icon>icon.png</icon>
        <preferences>preferences.xml</preferences>
        <js>main.js</js>
        <js>library.js</js>
        <history>history.xml</history>
    </files>
    <counters>
        <counter id="temperature_color" name="Температура с цветом" type="html" />
        <counter id="temperature" name="Температура" type="text" units="°" />
        <counter id="temperature_int" name="Температура (число)" units="°" />
        <counter id="ts" name="Время генерации данных" type="text" units="" />
    </counters>
    <keywords>погода, температура, москва, россия</keywords>
    <type>weather</type>
    <country>ru</country>
</provider>
