<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen>
    <EditTextPreference
		obligatory="true"
        title="E-mail" 
        positiveButtonText="OK" 
        summary="||{@s}" 
        dialogTitle="E-mail" 
        negativeButtonText="Cancel" 
        dialogMessage="Please enter your e-mail."
        key="login"
        inputType="textEmailAddress">
    </EditTextPreference>
    <EditTextPreference
		obligatory="true"
        positiveButtonText="OK"
        key="password" 
        dialogTitle="Password"
        negativeButtonText="Cancel"
        title="Password"
        summary="||***********"
        dialogMessage="Please enter your password for Google Account."
        inputType="textPassword">
    </EditTextPreference>
    <EditTextPreference
		obligatory="true"
        title="Application name" 
        positiveButtonText="OK" 
        summary="||{@s}" 
        dialogTitle="Application name" 
        negativeButtonText="Cancel" 
        dialogMessage="Please enter application name to track."
        key="app_name">
    </EditTextPreference>	
</PreferenceScreen>