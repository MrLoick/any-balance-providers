<?xml version="1.0" encoding="utf-8"?>
<provider>
    <id version="1">ab-money-rs-pre</id>
    <name>Русский стандарт (Виртуальные карты)</name>
    <description>Информация о виртуальной предоплаченной карте в банке "Русский стандарт". 

Информация берется со страницы http://www.rsb.ru/cards/virtual_card/ (по ссылке Проверка лимита)
    </description>
    <author>Dmirty Kochin &lt;dco@mail.ru&gt;</author>
    <files>
	<icon>icon.png</icon>
        <preferences>preferences.xml</preferences>
        <js>library.js</js>
        <js>main.js</js>
        <history>history.xml</history>
    </files>
    <counters>
	<counter id="balance" name="Лимит" units=" {@currency}"/>
        <counter id="num" name="Номер карты" type="text"/>
        <counter id="till" name="Срок действия" type="time" format="MM/yyyy"/>
        <counter id="type" name="Платежная система" type="text"/>
        <counter id="lastopsum" name="Сумма последней операции" units=" {@lastopcur}"/>
        <counter id="lastopdesc" name="Последняя операция" type="text"/>
        <counter id="lastopdate" name="Дата последней операции" type="time" format="dd/MM/yyyy"/>
        <counter id="lastopcur" name="Валюта последней операции" type="text"/>
        <counter id="currency" name="Валюта" type="text"/>
    </counters>
    <keywords>
        Кредит, банк, Русский стандарт
    </keywords>
    <type>
        money
    </type>
    <country>
        ru
    </country>
</provider>