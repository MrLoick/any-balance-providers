<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen>
      <ListPreference 
        key="prefph"
        title="Префикс номера телефона" 
        summary="Префикс номера телефона|063 или 093|{@s}\n" 
	entries="063|093"
	entryValues="063|093"
        dialogTitle="Префикс номера телефона">
    </ListPreference>
    <EditTextPreference 
        key="phone"
        title="Номер телефона" 
        summary="Номер без префикса +380X3||{@s}\n" 
        dialogTitle="Номер телефона" 
        negativeButtonText="Отмена" 
        dialogMessage="Введите номер вашего телефона"
        positiveButtonText="ОК" 
        inputType="number">
    </EditTextPreference>
    <EditTextPreference 
        key="pass" 
        title="Пароль"
        summary="Пароль для авторизации||***********\n"
        dialogTitle="Пароль"
        negativeButtonText="Отмена"
        dialogMessage="Введите пароль, используемый для авторизации"
        positiveButtonText="ОК"
        inputType="textPassword">
    </EditTextPreference>
</PreferenceScreen>
