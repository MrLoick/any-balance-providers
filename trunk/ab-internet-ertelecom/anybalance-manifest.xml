<?xml version="1.0" encoding="utf-8"?>
<provider>
  <id major_version="1.0" version="1">ab-internet-ertelecom</id>
  <name>Интернет провайдер Дом.ру (Казань)</name>
  <description>
    Получает текущий баланс, бонусный баланс, номера лицевого счета и договора, статус и трафик в текущем месяце у провайдера "Эр-телеком" (ДОМ.РУ)
  </description>
  <author>wtiger &lt;wtiger@mail.ru&gt;</author>
  <files>
    <icon>icon.png</icon>
    <preferences>preferences.xml</preferences>
    <js>api:jquery.min.js</js> <!-- Используем библиотеку, которая и так входит в AnyBalance -->
    <js>main.js</js>
  </files>
  <counters>
    <counter id="balance" name="Баланс" units="р"/>
    <counter id="contract" name="Номер договора" type="text" prefix="Договор:"/>
    <counter id="status" name="Статус" type="text" prefix="Статус:"/>
    <counter id="name" name="ФИО" type="text"/>
    <counter id="contract_type" name="Тип контракта" type="text"/>
    <counter id="traffic_inner" name="Внутренний (Домашний) трафик" prefix="Домашний:" suffix="Мб"/>
    <counter id="traffic_outer" name="Внешний трафик" prefix="Внешний:" suffix="Мб"/>
  </counters>
  <keywords>
    провайдер интернет дом.ру
  </keywords>
  <type>
    internet, tv
  </type>
</provider>
