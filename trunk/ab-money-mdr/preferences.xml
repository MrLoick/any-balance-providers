<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen>
	<EditTextPreference
		title="Логин"
		key="login"
		summary="||{@s}"
		obligatory="true"
		dialogTitle="Логин"
		positiveButtonText="ОК"
		negativeButtonText="Отмена"
		dialogMessage="Введите логин, используемый для входа в личный кабинет.">
	</EditTextPreference>
	<EditTextPreference
		title="Пароль"
		key="password"
		summary="||***********"
		obligatory="true"
		dialogTitle="Пароль"
		positiveButtonText="ОК"
		negativeButtonText="Отмена"
		dialogMessage="Введите пароль, используемый для входа в личный кабинет."
		inputType="textPassword">
	</EditTextPreference>
	<ListPreference
		key="city"
		title="Город"
		summary="||{@s}"
		entries="Ессентуки|Железноводск|Лермонтов|Минеральные Воды|Невинномысск"
		entryValues="2|1|3|4|5"
		defaultValue="3">
	</ListPreference>    
</PreferenceScreen>