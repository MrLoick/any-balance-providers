<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen>
    <EditTextPreference 
        title="Логин" 
        positiveButtonText="ОК" 
        summary="|Введите логин, например stm1234567|{@s}" 
        dialogTitle="Логин" 
        negativeButtonText="Отмена" 
        dialogMessage="Логин в личный кабинет МТС, например, stm1234567"
        key="login">
    </EditTextPreference>
    <EditTextPreference 
        positiveButtonText="ОК"
        key="password" 
        dialogTitle="Пароль"
        negativeButtonText="Отмена"
        title="Пароль"
        summary="|Введите пароль для входа в личный кабинет|***********"
        dialogMessage="Введите пароль, используемый для входа в личный кабинет МТС"
        inputType="textPassword">
    </EditTextPreference>
    <ListPreference 
        key="region" 
        title="Регион"
        summary="|Нужен для определения личного кабинета|{@s}"
        entries="Вологда|Екатеринбург|Ижевск|Киров|Комсомольск-на-Амуре|Москва|Нижний Новгород|Новосибирск|Пенза|Пермь|Ростов|Северодвинск|Тула"
        entryValues="vlgd|ekt|izh|krv|kms|moscow|nnov|nsk|pnz|prm|rostov|sdv|tula"
	defaultValue="moscow">
    </ListPreference>
</PreferenceScreen>