<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen>
    <EditTextPreference 
        title="Логин" 
        positiveButtonText="ОК" 
        summary="Логин, например stm1234567||{@s}\n" 
        dialogTitle="Логин" 
        negativeButtonText="Отмена" 
        dialogMessage="Логин в личный кабинет МТС, например, stm1234567"
        key="login">
    </EditTextPreference>
    <EditTextPreference 
        positiveButtonText="ОК"
        key="password" 
        dialogTitle="Пароль"
        negativeButtonText="Отмена"
        title="Пароль"
        summary="Пароль для входа в личный кабинет||***********\n"
        dialogMessage="Введите пароль, используемый для входа в личный кабинет МТС"
        inputType="textPassword">
    </EditTextPreference>
    <ListPreference 
        key="region" 
        title="Регион"
        summary="Нужен для определения личного кабинета||{@s}\n"
        entries="Москва|Ростов|Новосибирск"
        entryValues="moscow|rostov|nsk"
	defaultValue="moscow">
    </ListPreference>
</PreferenceScreen>