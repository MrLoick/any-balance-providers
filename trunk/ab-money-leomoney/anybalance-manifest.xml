<?xml version="1.0" encoding="utf-8"?>
<provider>
	<id version="12">ab-money-leomoney</id>
	<api flags="no_browser"/>
	<name>Leomoney</name>
	<description html="true"><![CDATA[
	<p>Shows balance and monthly limits on e-wallet Leomoney (http://leomoney.com).</p>
	]]></description>
	<instruction html="true"><![CDATA[
	<p>To register a wallet go to http://leomoney.com/security/registration.</p>
	<p>To recover your password go to http://leomoney.com/security/recoverypassword.</p>
	]]></instruction>
	<author>Dmitry Kochin &lt;dco@mail.ru&gt;</author>
	<files>
		<icon>icon.png</icon>
		<preferences>preferences.xml</preferences>
		<js>library.js</js>
		<js>main.js</js>
		<history>history.xml</history>
	</files>
	<counters>
		<counter id="balance" name="Balance" units=" {@currency}"/>
		<counter id="spent" name="Spent in current month" units=" {@currency}"/>
		<counter id="limit" name="Month limit" units=" {@currency}"/>
		<counter id="wallet" name="Wallet number" type="text"/>
		<counter id="phone" name="Phone number" type="text"/>
	</counters>
	<keywords>леомани</keywords>
	<type>money</type>
	<country>ru,ae</country>
</provider>