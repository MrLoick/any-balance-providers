<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen>
	<EditTextPreference
		title="Login"
		key="login"
		summary="||{@s}"
		obligatory="true"
		dialogTitle="Login"
		positiveButtonText="OK"
		negativeButtonText="Cancel"
		dialogMessage="Enter login to your personal account.">
	</EditTextPreference>
	<EditTextPreference
		title="Password"
		key="password"
		summary="||***********"
		obligatory="true"
		dialogTitle="Password"
		positiveButtonText="OK"
		negativeButtonText="Cancel"
		dialogMessage="Enter password to your personal account."
		inputType="textPassword">
	</EditTextPreference>
    <CheckBoxPreference
        title="Billing type"
        defaultValue="true"
        summaryOn="Prepayed"
        summaryOff="Postpayed"
        key="billing" />
</PreferenceScreen>