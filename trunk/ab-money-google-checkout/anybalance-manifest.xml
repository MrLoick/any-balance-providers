<?xml version="1.0" encoding="utf-8"?>
<provider>
    <id version="4">ab-money-google-checkout</id>
    <name>Google Wallet (Checkout)</name>
	<api flags="no_browser"/>
	<description html="true"><![CDATA[
	<p>Предоставляет информацию о текущем балансе на Google Кошельке.</p>
	<p><b>Особенности:</b></p>
	<p>Этот провайдер не работает, если включена 2-этапная авторизация.</p>
	]]></description>
    <author>Stark &lt;support@starksoft.ru&gt;</author>
	<files>
		<icon>icon.png</icon>
		<preferences>preferences.xml</preferences>
		<js>library.js</js>
		<js>main.js</js>
		<history>history.xml</history>
	</files>
    <counters>
        <counter id="balance" name="Balance" units=" {@currency}"/>
		<counter id="last_payment" name="Last payment" units=" {@currency}"/>
		<counter id="last_payment_date" name="Last payment date" type="time" format="dd/MM/yyyy" />
		<counter id="fio" name="Name" type="text"/>
		<counter id="currency" name="Currency" type="text"/>
		<counter id="login_email" name="E-Mail" type="text"/>
    </counters>
    <keywords>Google, Play, Android, market, Checkout, wallet, walet</keywords>
    <type>money</type>
</provider>