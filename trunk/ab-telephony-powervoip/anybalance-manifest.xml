<?xml version="1.0" encoding="utf-8"?>
<provider>
  <id version="1">ab-telephony-powervoip</id>
  <name>PowerVoip</name>
  <description>
   Gets information from www.powervoip.com such as your credit, notifications count, automatic recharge status.
  </description>
  <author>v_stikh &lt;stikhilyas@gmail.com&gt;</author>
  <files>
    <icon>icon.png</icon>
    <preferences>preferences.xml</preferences>
    <js>library.js</js>
    <js>main.js</js>
  </files>
  <counters>
    <counter id="credit" name="Credit" units="$"/>
    <counter id="recharge" name="Automatic recharge status" type="text"/>
    <counter id="notifications" name="Notifications count"/>
  </counters>
  <keywords>
    www.powervoip.com, voip
  </keywords>
  <type>
    telephony
  </type>
</provider>