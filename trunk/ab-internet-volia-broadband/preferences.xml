<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen>
    <EditTextPreference 
        key="login"
        title="Номер договора" 
        summary="Номер вашего договора (6 цифр)||{@s}\n" 
        dialogTitle="Номер договора" 
        negativeButtonText="Отмена" 
        dialogMessage="Введите номер вашего договора"
        positiveButtonText="ОК" 
        inputType="number">
    </EditTextPreference>
    <EditTextPreference 
        key="pass" 
        title="Пароль"
        summary="Пароль для авторизации||***********\n"
        dialogTitle="Пароль"
        negativeButtonText="Отмена"
        dialogMessage="Введите пароль, используемый для авторизации"
        positiveButtonText="ОК"
        inputType="textPassword">
    </EditTextPreference>
    <ListPreference 
        key="tariff_type"
        title="Тип тарифа" 
        summary="||{@s}" 
	entries="ТВ+Интернет|Интернет|Цифровое ТВ|Аналоговое ТВ"
	entryValues="3|2|1|0"
        defaultValue="3"
        dialogTitle="Тип подключения">
    </ListPreference>
</PreferenceScreen>