<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen>
    <EditTextPreference 
        title="Логин" 
        positiveButtonText="ОК" 
        summary="||{@s}" 
        dialogTitle="Логин" 
        negativeButtonText="Отмена" 
        dialogMessage="Введите логин в личный кабинет."
        key="login">
    </EditTextPreference>
    <EditTextPreference 
        positiveButtonText="ОК"
        key="password" 
        dialogTitle="Пароль"
        negativeButtonText="Отмена"
        title="Пароль"
        summary="||***********"
        dialogMessage="Введите пароль, используемый для входа в личный кабинет."
        inputType="textPassword">
    </EditTextPreference>
    <ListPreference 
        key="town" 
        title="Город"
        summary="||{@s}\n"
        entries="Уфа|Туймазы|Белебей"
        entryValues="0|1|2"
    defaultValue="0">
    </ListPreference>
</PreferenceScreen>