<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen>
    <EditTextPreference 
        title="Номер консультанта" 
        positiveButtonText="ОК" 
        summary="||{@s}" 
        dialogTitle="Номер консультанта" 
        negativeButtonText="Отмена" 
        dialogMessage="Введите Номер консультанта для входа в личный кабинет."
        inputType="number"
        key="login">
    </EditTextPreference>
    <EditTextPreference 
        positiveButtonText="ОК"
        key="password" 
        dialogTitle="Пароль"
        negativeButtonText="Отмена"
        title="Пароль"
        summary="||***********"
        dialogMessage="Введите пароль, используемый для входа в личный кабинет."
        inputType="textPassword">
    </EditTextPreference>
    <ListPreference 
        key="country"
        title="Страна" 
        summary="|Выберите страну|{@s}" 
	entries="Россия|Украина"
	entryValues="ru|ua"
        defaultValue="ua"
        dialogTitle="Выберите страну">
    </ListPreference>
</PreferenceScreen>