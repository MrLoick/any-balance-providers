<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen>
      <ListPreference 
        key="cabinet"
        title="Кабинет" 
        summary="||{@s}"
		entries="Новый (с вводом капчи)|Старый"
		entryValues="new|old"
		defaultValue="old"
        dialogTitle="Выберите личный кабинет.">
    </ListPreference>
	<ListPreference 
        key="prefix"
        title="Префикс номера телефона" 
        summary="|Без префикса|{@s}" 
	entries="Без префикса|495|499|812|005"
	entryValues="|495|499|812|005"
        dialogTitle="Префикс вашего номера АллоИнкогнито">
    </ListPreference>
    <EditTextPreference 
        title="Номер телефона" 
        positiveButtonText="ОК" 
        summary="|Ваш номер АллоИнкогнито|{@s}\n" 
        dialogTitle="Логин" 
        negativeButtonText="Отмена" 
        dialogMessage="Введите 7 цифр вашего номера АллоИнкогнито."
        inputType="number"
        key="login">
    </EditTextPreference>
    <EditTextPreference 
        positiveButtonText="ОК"
        key="password" 
        dialogTitle="PIN"
        negativeButtonText="Отмена"
        title="Пароль"
        summary="|Введите PIN|***********"
        dialogMessage="Введите ваш PIN-код управления, используемый для входа в личный кабинет АллоИнкогнито."
        inputType="numberPassword">
    </EditTextPreference>
</PreferenceScreen>