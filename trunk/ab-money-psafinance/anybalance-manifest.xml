		<counter id="type" name="Тип кредита" type="text"/>
		<counter id="date" name="Дата оформления кредита" type="time" format="dd/MM/yyyy"/>
		<counter id="summ_total" name="Сумма кредита" units=" {@currency_summ}"/>
		<counter id="summ_debt" name="Остаток ссудной задолженности" units=" {@currency_summ}"/>
		<counter id="past_due" name="Просроченная задолженность" type="text"/>
		<counter id="time" name="Срок кредита" units=" мес."/>
		<counter id="closed" name="Договор закрыт" type="text"/>
	</counters>
	<keywords></keywords>
	<type>money</type>
	<country>ru</country>
