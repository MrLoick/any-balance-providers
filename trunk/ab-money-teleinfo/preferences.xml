<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen>
	<EditTextPreference
		obligatory="true"
		title="Логин"
		positiveButtonText="ОК"
		summary="|УНК или псевдоним|{@s}\n"
		dialogTitle="УНК или псевдоним"
		negativeButtonText="Отмена"
		dialogMessage="УНК или псевдоним"
		key="login">
	</EditTextPreference>
	<EditTextPreference
		obligatory="true"
		positiveButtonText="ОК"
		key="password"
		dialogTitle="Пароль"
		negativeButtonText="Отмена"
		title="Пароль"
		summary="|Введите пароль|***********\n"
		dialogMessage="Введите пароль для входа в телебанк"
		inputType="textPassword">
	</EditTextPreference>
	<ListPreference
		key="source"
		title="Источник данных"
		summary="||{@s}"
		entries="Мобильное приложение|Интернет-банк"
		entryValues="mobile|site"
		defaultValue="mobile">
	</ListPreference>
	<ListPreference
		key="type"
		title="Что смотреть"
		summary="||{@s}"
		entries="Карта или счет|Счет в АБС"
		entryValues="card|abs"
		defaultValue="card">
	</ListPreference>
	<EditTextPreference
		title="Номер карты/счета"
		positiveButtonText="ОК"
		summary="|Автоматически|{@s}\n"
		dialogTitle="Номер карты/счета"
		negativeButtonText="Отмена"
		dialogMessage="В зависимости от настройки Что смотреть, введите сюда последние цифры номера карты или счета. Если оставить поле пустым, то будет показана информация по первому счету/карте."
		key="card">
	</EditTextPreference>
</PreferenceScreen>