<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen>
    <EditTextPreference 
        title="Логин" 
        positiveButtonText="ОК" 
        summary="||{@s}" 
        dialogTitle="Логин" 
        negativeButtonText="Отмена" 
        dialogMessage="Логин для входа в личный кабинет Петербургской Сбытовой Компании"
        key="login">
    </EditTextPreference>
    <EditTextPreference 
        positiveButtonText="ОК"
        key="password" 
        dialogTitle="Пароль"
        negativeButtonText="Отмена"
        title="Пароль"
        summary="|Введите пароль|***********"
        dialogMessage="Введите пароль, используемый для входа в личный кабинет"
        inputType="textPassword">
    </EditTextPreference>
    <ListPreference 
        key="type" 
        title="Личный кабинет"
        summary="||{@s}\n"
        entries="Петербургская Сбытовая Компания|Петроэлектросбыт"
        entryValues="pesc|pes"
	defaultValue="pesc">
    </ListPreference>
</PreferenceScreen>