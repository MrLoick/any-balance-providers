  </description>
  <author>Dmitry Kochin &lt;dco@mail.ru&gt;</author>
  <files>
    <icon>icon.png</icon>
    <preferences>preferences.xml</preferences>
    <js>main.js</js>
  </files>
  <counters>
    <counter id="balance" name="Баланс" units="р"/>
    <counter id="debt" name="Обещанные платежи" units="р"/>
    <counter id="traffic_total" name="Трафик" units="Мб"/>
    <counter id="traffic_in" name="Входящий трафик" units="Мб"/>
    <counter id="traffic_out" name="Исходящий трафик" units="Мб"/>
    <counter id="account" name="Номер счета" type="text"/>
  </counters>
  <keywords>
