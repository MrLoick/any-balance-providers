<?xml version="1.0" encoding="utf-8"?>
<provider>
  <!-- Флаг отключает загрузку rhino.env.js на сервере, обязательно! -->
  <api flags="no_browser" />
  <id major_version="1.2" version="35">ab-cell-kyivstar</id>
  <name>Киевстар</name>
  <description>
    Получает баланс, бонусные минуты, СМС, ММС, остаток интернет-трафика и другие бонусы для мобильного оператора Киевстар.
    Информация берется из системы Мой Київстар https://my.kyivstar.ua/

ВНИМАНИЕ! Этот провайдер получает значения только для некорпоративных тарифных планов. Если у вас корпоративный тариф, воспользуйтесь провайдером Киевстар Корпоративный.

Если вы не зарегистрированы в системе Мой Київстар, то для пользования провайдером вам сначала нужно там зарегистрироваться на странице https://my.kyivstar.ua/tbmb/enroll_ABContr/user/show.do.
	</description>
	<author>Sergey Bashmanov &lt;sergey.bashmanov@gmail.com&gt;</author>
	<files>
		<icon>icon.png</icon>
		<preferences>preferences.xml</preferences>
		<js>library.js</js>
		<js>main.js</js>
		<history>history.xml</history>
	</files>
	<counters>
		<counter id="balance" name="Баланс" suffix=" ₴" type="numeric"/>
		<counter id="bonus_mins_1" name="Бонусные минуты (1)" units=" мин" type="time_interval" format="{@MIN}"/>
		<counter id="bonus_mins_2" name="Бонусные минуты (2)" units=" мин" type="time_interval" format="{@MIN}"/>
		<counter id="mins_tariff" name="Тарифные минуты" units=" мин" type="time_interval" format="{@MIN}"/>
		<counter id="mms" name="MMS" type="numeric"/>
		<counter id="sms" name="SMS" type="numeric"/>
		<counter id="inc_pay" name="Доплата за входящие" suffix=" ₴" type="numeric"/>
		<counter id="bonus_money" name="Бонусные средства" suffix=" ₴" type="numeric"/>
		<counter id="bonus_money_till" name="Срок действия бонусных средств" type="time" format="dd/MM/yyyy"/>
		<counter id="bonus_left" name="Остаток бонусов" suffix=" ₴" type="numeric"/>
		<counter id="internet" name="Интернет" units=" Mb"/>
		<counter id="home_internet" name="Домашний Интернет" suffix=" ₴" type="numeric"/>
		<counter id="home_internet_date" name="Домашний Интернет, срок действия" type="time" format="dd/MM/yyyy"/>
		<counter id="limit" name="Порог отключения" suffix=" ₴" type="numeric"/>
		<counter id="till" name="Срок действия номера" type="time" format="dd/MM/yyyy"/>
		<counter id="comfort_till" name="Срок действия услуги Комфортный переход" type="time" format="dd/MM/yyyy"/>
		<counter id="phone" name="Номер телефона" type="text"/>
		<counter id="sms_packet" name="SMS пакет" type="text"/>
		<counter id="sms_packet_till" name="Срок действия пакета SMS" type="time" format="hh:mm dd/MM/yyyy"/>
		<counter id="sms_packet_left" name="Остаток SMS" type="numeric"/>
	</counters>
	<keywords>Сотовый телефон, мобильный, мобильник, kyivstar, киевстар, Украина</keywords>
	<type>cell</type>
	<country>ua</country>
</provider>