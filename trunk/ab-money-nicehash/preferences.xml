<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen>
	<EditTextPreference
		title="BTC Wallet"
		key="wallet"
		summary="||{@s}"
		obligatory="true"
		dialogTitle="BTC Wallet"
		positiveButtonText="ОК"
		negativeButtonText="Cancel"
		dialogMessage="Please enter your Bitcoin wallet address.">
	</EditTextPreference>
	<ListPreference
		title="Server"
		summary="||{@s}"
		key="server"
		defaultValue="www.nicehash.com"
		entries="NiceHash|WestHash"
		entryValues="www.nicehash.com|www.westhash.com">
	</ListPreference>
	<ListPreference
		title="Units"
		summary="||{@s}"
		key="btcunits"
		defaultValue="1"
		entries="BTC|mBTC|µBTC"
		entryValues="1|1000|1000000">
	</ListPreference>
	
</PreferenceScreen>