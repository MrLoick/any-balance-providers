<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen>
    <EditTextPreference
        key="login"
        title="Логин"
        summary="||{@s}"
        inputType="text"
        dialogTitle="Логин"
        dialogMessage="Введите логин для входа в личный кабинет"
        positiveButtonText="ОК"
        negativeButtonText="Отмена">
    </EditTextPreference>
    <EditTextPreference
        key="password"
        title="Пароль"
        summary="||**********"
        inputType="textPassword"
        dialogTitle="Пароль"
        dialogMessage="Введите пароль, используемый для входа в личный кабинет"
        positiveButtonText="ОК"
        negativeButtonText="Отмена">
    </EditTextPreference>
    <ListPreference 
        key="region" 
        title="Регион"
        summary="|Нужен для определения личного кабинета|{@s}"
        entries="Москва и МО|Воронеж|Белгород|Орел"
        entryValues="moscow|voronezh|belgorod|orel"
	      defaultValue="moscow">
    </ListPreference>
</PreferenceScreen>
