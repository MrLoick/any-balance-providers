        title="Логин" 
        positiveButtonText="ОК" 
        summary="Логин в SIPNET||{@s}\n" 
        dialogTitle="Логин" 
        negativeButtonText="Отмена" 
        obligatory="true"
        dialogMessage="Введите Ваш логин или SIP ID"
        key="login">
