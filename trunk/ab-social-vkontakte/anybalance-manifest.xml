<?xml version="1.0" encoding="utf-8"?>
<provider>
	<api flags="no_browser"/>
	<id version="2">ab-social-vkontakte</id>
	<name>Вконтакте</name>
	<description html="true"><![CDATA[
	<p>Предоставляет информацию о количестве голосов, количестве новых сообщений и заявок в друзья в социальной сети "Вконтакте" (http://vk.com).</p>
	]]></description>
	<author>Dmitry Kochin &lt;dco@mail.ru&gt;</author>
	<files>
		<icon>icon.png</icon>
		<preferences>preferences.xml</preferences>
		<js>library.js</js>
		<js>main.js</js>
		<history>history.xml</history>
	</files>
	<counters>
		<counter id="balance" name="Голоса" flags="zero_when_empty"/>
		<counter id="messages" name="Сообщения" units="шт" flags="zero_when_empty"/>
		<counter id="new_friends" name="Заявки в друзья" units="шт" flags="zero_when_empty"/>
		<counter id="vk_name" name="Имя" type="text" />
	</counters>
	<keywords>vkontakte, контакт, вк</keywords>
	<type>social</type>
	<country>ru, ua, by, kz</country>
</provider>